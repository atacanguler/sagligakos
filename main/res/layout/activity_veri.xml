<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".VeriActivity">




<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/layy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




    <LinearLayout
        android:id="@+id/layyLOGO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@color/colorW"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="200px"
            android:layout_marginTop="0px"
            android:src="@drawable/yayalogo"
            android:textAlignment="center" />

    </LinearLayout>


        <LinearLayout
            android:id="@+id/layy2"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:background="@color/colorGreen"
            android:orientation="vertical">

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layyCins"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/colorW"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:orientation="horizontal">


            <RadioGroup
            android:id="@+id/radioSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
                android:textAlignment="center"
            android:orientation="horizontal">

            <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:text="Erkek"
            android:checked="true" />

            <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:text="Kadın" />

            </RadioGroup>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layyX"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/colorW"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewX"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="64px" />

            <TextView
                android:id="@+id/textViewXX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  harcadığım kalori"
                android:textAlignment="center"
                android:textColor="@color/colorGreen"
                android:textSize="64px" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layyYY"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/colorW"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editViewY"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="64px"
                android:textAlignment="center"
                android:text="0" />

            <TextView
                android:id="@+id/textViewYY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  kilom"
                android:textAlignment="center"
                android:textColor="@color/colorGreen"
                android:textSize="64px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layyYYY"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/colorW"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editViewYY"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="64px"
                android:textAlignment="center"
                android:text="0" />

            <TextView
                android:id="@+id/textViewYYY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  boyum"
                android:textAlignment="center"
                android:textColor="@color/colorGreen"
                android:textSize="64px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layyZZZ"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/colorW"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editViewZZ"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="64px"
                android:textAlignment="center"
                android:text="0" />

            <TextView
                android:id="@+id/textViewZZZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  yaşım"
                android:textAlignment="center"
                android:textColor="@color/colorGreen"
                android:textSize="64px" />

        </LinearLayout>



        <Button
            android:id="@+id/buttonAktar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGreen"
            android:textSize="36px"
            android:layout_marginTop="25px"
            android:textColor="@color/colorW"
            android:text="ALMAN GEREKEN KALORİYİ HESAPLA" />



        <LinearLayout
            android:id="@+id/layySonuc"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/colorW"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textViewSonucYazi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  bugün"
                android:textAlignment="center"
                android:textColor="@color/colorGreen"
                android:textSize="36px" />


            <TextView
                android:id="@+id/textViewSonuc"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="64px" />

            <TextView
                android:id="@+id/textViewSonucYazii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  kalori alman gerek"
                android:textAlignment="center"
                android:textColor="@color/colorGreen"
                android:textSize="36px" />

        </LinearLayout>




    </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>